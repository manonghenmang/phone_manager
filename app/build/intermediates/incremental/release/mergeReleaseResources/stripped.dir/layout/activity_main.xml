<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_main"
        android:textSize="28sp"
        android:fontWeight="700"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <Button
                    android:id="@+id/buttonLend"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="@string/btn_lend"
                    android:textSize="20sp"
                    android:fontWeight="500"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/colorWhite"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.Button" />

                <Button
                    android:id="@+id/buttonReturn"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="@string/btn_return"
                    android:textSize="20sp"
                    android:fontWeight="500"
                    android:backgroundTint="@color/colorSuccess"
                    android:textColor="@color/colorWhite"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.Button" />

                <Button
                    android:id="@+id/buttonAddPhone"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="添加手机"
                    android:textSize="20sp"
                    android:fontWeight="500"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/colorWhite"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.Button" />

                <Button
                    android:id="@+id/buttonBrowsePhones"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="浏览手机"
                    android:textSize="20sp"
                    android:fontWeight="500"
                    android:backgroundTint="@color/colorInfo"
                    android:textColor="@color/colorWhite"
                    style="@style/Widget.MaterialComponents.Button" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用说明：点击相应按钮开始借还操作，系统将引导您完成扫描二维码和信息输入流程。"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary"
            android:layout_margin="16dp"
            android:gravity="center"
            android:textAlignment="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>